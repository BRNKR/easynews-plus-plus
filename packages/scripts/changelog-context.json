{
  "options": {
    "preset": {
      "name": "conventionalcommits"
    },
    "groupBy": false,
    "commitGroupsSort": "title",
    "commitsSort": ["scope", "subject"],
    "noteGroupsSort": "title",
    "issuePrefixes": ["#"],
    "types": [
      { "type": "feat", "section": "Features" },
      { "type": "fix", "section": "Bug Fixes" },
      { "type": "perf", "section": "Performance Improvements" },
      { "type": "refactor", "section": "Code Refactoring" },
      { "type": "docs", "section": "Documentation" },
      { "type": "style", "section": "Styles" },
      { "type": "test", "section": "Tests" },
      { "type": "chore", "section": "Chores" }
    ],
    "displayTypes": true,
    "displayScopes": true,
    "displayIssues": true
  },
  "writerOpts": {
    "groupBy": "type",
    "commitGroupsSort": "title",
    "commitsSort": ["scope", "subject"],
    "noteGroupsSort": "title",
    "mainTemplate": "{{> header}}{{> commit-list}}{{> footer}}",
    "commitPartial": "- **{{type}}{{#if scope}}({{scope}}){{/if}}:** {{subject}}{{#if hash}} ([{{shortHash}}]({{@root.repoUrl}}/commit/{{hash}})){{/if}}\n",
    "headerPartial": "# {{version}}\n{{#if date}}({{date}})\n{{/if}}\n",
    "footerPartial": "{{> footer-notes}}",
    "groupOrder": [
      "Features",
      "Bug Fixes",
      "Performance Improvements",
      "Code Refactoring",
      "Documentation",
      "Styles",
      "Tests",
      "Chores"
    ]
  }
}
